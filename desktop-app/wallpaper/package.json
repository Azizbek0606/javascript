{
  "name": "wallpaper-manager",
  "version": "1.0.0",
  "type": "module",
  "description": "A powerful desktop application for managing wallpapers with advanced features like automatic switching and grouping.",
  "main": "scripts/main/main.js",
  "author": "MAJOR",
  "license": "MIT",
  "keywords": [
    "wallpaper",
    "desktop-app",
    "electron",
    "wallpaper-manager",
    "automatic-switching"
  ],
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder"
  },
  "dependencies": {
    "axios": "1.8.3",
    "bcryptjs": "3.0.2",
    "better-sqlite3": "11.8.1",
    "dotenv": "16.4.7",
    "puppeteer": "24.4.0",
    "three": "0.174.0",
    "wallpaper": "7.2.1"
  },
  "devDependencies": {
    "electron": "^35.0.0",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "electron-reload": "^2.0.0-alpha.1"
  },
  "build": {
    "appId": "com.major.wallpaper",
    "productName": "Wallpaper Manager",
    "files": [
      "scripts/**/*",
      "node_modules/**/*",
      "assets/resources/**/*",
      "ui/**/*",
      "database/**/*"
    ],
    "icon": "assets/resources/images/app-icon/w_icon.ico"
  }
}